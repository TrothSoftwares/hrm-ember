<h2 class="ui dividing header">Employees</h2>
<div class="ui middle aligned divided list">
  {{#each model as |employee|}}
  <div class="item">
    <div class="right floated content">
      {{#link-to "dashboard.employees.employee" employee }}
      <div class="ui button">View</div>
      {{/link-to}}
    </div>
    <div class="right floated content">
      <div class="ui button" {{action "deleteEmployee" employee}}>Delete</div>
    </div>
    <img class="ui avatar image" src="/images/lena.png">
    <div class="content">
      {{employee.firstname}}
    </div>
  </div>
  {{/each}}

</div>
