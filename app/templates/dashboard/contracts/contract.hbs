<div class="column">

  <div class="ui form">
    <div class="fields">
      <div class="four wide field">
        <label>Employee</label>

        <select onchange={{action "updateEmployee" value="target.value"}} class="ui selection dropdown">
          {{#each employees as |emp|}}
          <option class="item {{equals}} {{education.employee.firstname}} {{emp.firstname}}" value={{emp.id}} selected={{eq education.employee.id emp.id}}>{{emp.firstname}}</option>
          {{/each}}
        </select>
      </div>
      <div class="four wide field">
        {{async-button  action="updateContract" default="Save"  fulfilled="Saved" pending="Saving.." rejected="Rejected! Try Again" class="ui button teal"}}
      </div>
    </div>

    <div class="fields">
      <div class="four wide field">
        <label>Status</label>
        {{#ui-dropdown class="ui selection dropdown" onChange=(action 'updateStatus')}}
        {{#if contract.status}}
<div class="text">{{contract.status}}</div>
{{else}}
<div class=" default text">Please Select</div>
{{/if}}
        <i class="dropdown icon"></i>
        <div class="menu">
          {{#each statuses as |status|}}
          <div class="item selected" data-id="{{status}}">
            {{status}}
          </div>
          {{/each}}
        </div>
        {{/ui-dropdown}}
      </div>

    </div>

    <div class="fields">
      <div class="four wide field">
        <label>Contract Start</label>
        {{pikaday-input value=contract.cstart placeholder="Degree Year" }}
      </div>
      <div class="four wide field">
        <label>Contract End</label>
        {{pikaday-input value=contract.cend placeholder="Degree Year" }}
      </div>
    </div>

    <div class="fields">
      <div class="four wide field">
        <label>Probation Start</label>
        {{pikaday-input value=contract.pstart placeholder="Degree Year" }}
      </div>
      <div class="four wide field">
        <label>Probation End</label>
        {{pikaday-input value=contract.pend placeholder="Degree Year" }}
      </div>
    </div>


    <div class="fields">
      <div class="four wide field">
        <label>Iqama Name</label>
        {{input type="text" value=contract.nameiqama placeholder="Iqama Name."}}
      </div>
      <div class="four wide field">
        <label>Proffesion</label>
        {{input type="text" value=contract.proiqama placeholder="Profession"}}
      </div>
    </div>




    <div class="fields">



    </div>
  </div>
</div>
